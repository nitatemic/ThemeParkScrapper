{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "rootDirs": [
            "."
        ],
        "outDir": "./dist"
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
